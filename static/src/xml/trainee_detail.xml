<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space='preserve'>
    <div t-name="trainee">
        <div class="o_control_panel">
            <nav aria-label="breadcrumb" class="col-md-8 d-none d-md-flex ">
                <ol class="breadcrumb bg-transparent mb-0 pl-0 py-0">
                    <li class="breadcrumb-item">
                        <a href="/">
                            <i class="fa fa-home" role="img" aria-label="Home" title    ="Home"/>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Trainees</li>
                </ol>
            </nav>
            <div class="ml-4 mt-2 create-save-btn">
                <button t-name="create.btn" class="btn btn-danger btn-sm create">Create</button>
            </div>
        </div>
        <div class="c_container">
        </div>
        <div class="c_trainees_list_container">
            </div>
    </div>
    <div t-name="trainee.input">
        <div class="container mt-4 col-8 shadow-lg p-3 mb-5 bg-white rounded">
            <h3 class=""> Fill out the form below: </h3>
            <form class="trainee-form">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control trainee-name" placeholder="Enter Name"/>
                            <small class="invalid-feedback">This field is required.</small>
                            
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control trainee-address" placeholder="Enter Address"/>
                            <small class="form-text text-muted">This field is required.</small>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="text" class="form-control trainee-phone_number" placeholder="Enter Phone number"/>
                            <small class="form-text text-muted invalid-feedback">This field is required.</small>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Stack</label>
                            <select class="form-group form-control trainee-stack">
                                <option value=''>Select Stack</option>
                                <option value="python">Python</option>
                                <option value="ror">Ruby on Rails</option>
                                <option value="qa">Quality Assurance</option>
                                <option value="angular">Angular</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <label class="date-input-label">
                                <input type="date" class="form-control trainee-dob"/>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                <button type="submit" class="submit-btn">submit</button>
                </div>
            </form>
        </div>
    </div>
    <div t-name="trainee.list">
        <t t-if="data">
            <div class="container mt-4 col-12 shadow-lg p-3 mb-5 bg-white rounded">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 10%" scope="col">#</th>
                            <th style="width: 20%" scope="col">Name</th>
                            <th style="width: 20%" scope="col">Address</th>
                            <th style="width: 15%" scope="col">Phone</th>
                            <th style="width: 10%" scope="col">Stack</th>
                            <th style="width: 15%" scope="col">Age</th>
                            <th style="width: 10%" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="data" t-as="item">
                            <tr class="table-row" style="cursor: pointer;">
                                <th scope="row">
                                    <t t-esc="item_index"/>
                                </th>
                                <td>
                                    <t t-esc="item.name"/>
                                </td>
                                <td>
                                    <t t-esc="item.address"/>
                                </td>
                                <td>
                                    <t t-esc="item.phone_number"/>
                                </td>
                                <td>
                                    <t t-esc="item.stack"/>
                                </td>
                                <td>
                                    <t t-esc="item.dob"/>
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm delete">Delete</button>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </div>
    <button t-name="save.btn" class="btn btn-danger btn-sm save">Save</button>
    <button t-name="cancel.btn" class="btn btn-info btn-sm ml-2 cancel">Cancel</button>
    <button t-name="edit.btn" class="btn btn-danger btn-sm edit">Edit</button>
    <button t-name="create.btn" class="btn btn-danger btn-sm create">Create</button>
</templates>