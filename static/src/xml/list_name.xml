<template id="template_list_name">

    <t t-name="todo.list.name">
        <t t-if="list_length">
            
            <div class="list card">
                <div class="single-list-name-section"></div>
            </div>
        </t>
        <t t-else="">
            <p>No list available!! create new list</p>
        </t>
    </t>
    
    <t t-name="todo.single.list.name">
        <div class="single-list-name">
            <h2 class="accordion">
                <t t-esc="name"/>
                <small class="task-count"><t t-esc="tasks_count"/></small>
            </h2>
            <div class="panel task-inside-list-section">
                <!-- <div class="task-inside-list-section"></div> -->
            </div>
        </div>
    </t>
    


</template>