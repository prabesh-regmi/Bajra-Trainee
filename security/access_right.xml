<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.module.category" id="module_to_do_app">
        <field name="name">To Do Access Right</field>
        <field name="description">To DO APP</field>
        <field name="sequence">12</field>
    </record>
    <record id="group_to_do_user" model="res.groups">
        <field name="name">To Do User</field>
        <field name="category_id" ref="module_to_do_app" />
    </record>
    <record id="group_to_do_admin" model="res.groups">
        <field name="name">To Do Admin</field>
        <field name="category_id" ref="module_to_do_app" />
        <field name="implied_ids" eval="[(4, ref('group_to_do_user'))]" />
    </record>
    <record id="practice_property_record_rule" model="ir.rule">
        <field name="name">Only Designated Task</field>
        <field ref="model_todo_task" name="model_id" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_to_do_admin'))]" />
    </record>
</odoo>