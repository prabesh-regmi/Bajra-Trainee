<?xml version ="1.0" encoding ="utf-8"?>
<odoo>
    <!-- Tree view to list all estate property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description" />
                <field name="postcode" />
                <field name="date_availability" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />
            </tree>
        </field>
    </record>
    <!-- Search view to querry estate property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <filter name="filter_name" string="Garden" domain="[('garden', '=', '2324')]"/>
            </search>
        </field>
    </record>
    <!-- Form view to create new estate property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group >
                        <group>
                            <field name="name"/>
                            <field name="description" />
                            <field name="postcode" />
                            <field name="date_availability" />
                            <field name="expected_price" />
                            <field name="selling_price" />
                        </group>
                        <group>
                            <field name="bedrooms" />
                            <field name="living_area" />
                            <field name="facades" />
                            <field name="garage" />
                            <field name="garden" />
                            <field name="garden_area" />
                            <field name="garden_orientation" />
                            <field name="total_area" />
                        </group>
                        <group>
                            <field name="property_type_id" />
                            <field name="buyer_id" />
                            <field name="seller_id" />
                            <field name="tag_id" widget = "many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action to go to estate form menu -->
    <record id="action_real_estate" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create a new estate property
                </p>
        </field>
    </record>
</odoo>